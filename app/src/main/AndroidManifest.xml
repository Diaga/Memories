<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pika.memories">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pika_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pika_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">
        <activity android:name="com.pika.memories.SplashActivity"
            android:theme="@style/splashScreenTheme"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pika.memories.EditorActivity"
            android:screenOrientation="nosensor"/>
        <activity
            android:name="com.pika.memories.ChatActivity"
            android:label="@string/title_activity_chat"
            android:screenOrientation="nosensor"/>
        <activity
            android:name="com.pika.memories.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="nosensor"/>
        <activity
            android:name="com.pika.memories.MainActivity"
            android:label="Memories"
            android:screenOrientation="nosensor">
        </activity>
        <activity android:name=".BaseActivity" android:noHistory="true"/>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>